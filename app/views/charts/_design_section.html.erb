<% colors = [
	"$yellow",
	"$orange",
	"$red",
	"$blue",
	"$purple",
	"$green",
	"$gray",
	"$light-gray",
	"$medium-dark-gray",
	"$dark-gray"] %>


<%= simple_form_for(@chart, remote: true) do |f| %>
  <%= f.input :font_size, collection: [ 8, 12, 16, 24, 32] %>
  <%= f.input :color, collection: colors %>
  <%= f.button :submit %>
<% end %>
