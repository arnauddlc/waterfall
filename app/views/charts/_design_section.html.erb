<% colors = [ "$yellow: #FFDB29",
"$orange: #FD7366",
"$red: #F04F2B",
"$blue: #30C2FF",
"$purple: #9E60F8",
"$green: #3EC28F",
"$gray: #000000",
"$light-gray: #F4F4F4",
"$medium-dark-gray: #1A1A1A",
"$dark-gray: #141414"] %>


<%= simple_form_for(@chart) do |f| %>
  <%= f.input :font_size, collection: [ 8, 12, 16, 24, 32] %>
  <%= f.input :color, collection: colors %>
  <%= f.button :submit %>
<% end %>