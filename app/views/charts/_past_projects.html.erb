<div class="row">
  <% @charts.each do |chart| %>

    <div class="col-xs-12 col-sm-4 col-md-3">
      <div class="card">
        <%= link_to edit_chart_path(chart) do %>
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'bar-chart.png' %>')">
          </div>
        <% end %>

        <div class="body">
          <div class="card-title">
            <%= link_to chart.title, edit_chart_path(chart), class:"chart-title" %>
          </div>
          <div class="card-delete">
            <i class="fas fa-trash-alt" data-toggle="modal" data-target="#myModal" data-id-chart="<%= chart.id %>"></i>
          </div>
        </div>

      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            <%= link_to chart_path(chart), method: :delete do  %>
              <button type="button" class="btn btn-primary">Confirm</button>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>


